//+---------------------------------------------------------------------------
//  File:       WindowsString.class
//
//  Synopsis:   Class definitions for objects that reference and manipulate
//              character strings in Windows
//----------------------------------------------------------------------------

#ifdef PLATFORM_WINDOWS

namespace mikestoolbox {

class WindowsString
{
public:

                     WindowsString       (const String& str);
                     WindowsString       (const WCHAR* pz, uintsys u_Length);
                     WindowsString       (const char* pz, uintsys u_Length);
                     WindowsString       (const WCHAR* pz);
                     WindowsString       (const char* pz);
                     WindowsString       ();

    String           UTF8                () const;
    String           Windows             () const;
    const char*      C                   () const;

    void             Clear               ();
    uintsys          Length              () const;
    uintsys          LengthUTF8          () const;
    uintsys          LengthWindows       () const;
    bool             IsEmpty             () const;

    void             Swap                (WindowsString& str);

    bool             operator==          (const WindowsString& str) const;
    bool             operator==          (const String& str) const;
    bool             operator==          (const char* pz) const;
    bool             operator==          (const WCHAR* pz) const;

    bool             operator!=          (const WindowsString& str) const;
    bool             operator!=          (const String& str) const;
    bool             operator!=          (const char* pz) const;
    bool             operator!=          (const WCHAR* pz) const;

    operator const char*                 () const;
    operator const WCHAR*                () const;

    operator const String&               () const;

    WindowsString&   operator=           (const String& str);
    WindowsString&   operator=           (const char* pz);
    WindowsString&   operator=           (const WCHAR* pz);

private:

    String str_UTF8_;
    String str_Windows_;
};

} // namespace mikestoolbox

namespace std {

template<>
void swap<mikestoolbox::WindowsString> (mikestoolbox::WindowsString& str1,
                                        mikestoolbox::WindowsString& str2);

} // namespace std

#endif // PLATFORM_WINDOWS

