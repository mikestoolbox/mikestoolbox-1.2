//+---------------------------------------------------------------------------
//  File:       BerkeleySocket.class
//
//  Synopsis:   Class definitions for objects that work with the Berkeley
//              sockets interface
//----------------------------------------------------------------------------

#ifdef PLATFORM_WINDOWS

#ifndef SHUT_RD
#define SHUT_RD   SD_RECEIVE
#define SHUT_WR   SD_SEND
#define SHUT_RDWR SD_BOTH
#endif

#else

typedef int SOCKET;
#define INVALID_SOCKET (-1)

#endif

namespace mikestoolbox {

void StartupWindowsSockets ();

//+---------------------------------------------------------------------------
//  Class:      BerkeleySocket
//
//  Synopsis:   A class that makes it easy to deal with Berkeley sockets
//----------------------------------------------------------------------------

class BerkeleySocket
{
public:

    BerkeleySocket (SOCKET h);
    BerkeleySocket ();
    ~BerkeleySocket ();

    bool        CreateSocket            (int n_Family, int n_Type, int n_Protocol);
    bool        CreateTCPSocket         (int n_Family);
    bool        CreateUDPSocket         (int n_Family);

    SOCKET      GetHandle               () const;

    bool        Bind                    (const SocketAddress& addr);
    bool        Connect                 (const SocketAddress& addr);
    bool        Listen                  (uint u_Backlog);
    SOCKET      Accept                  (SocketAddress& addr);
    bool        Shutdown                (int n_How);
    bool        Close                   ();

    bool        ReuseAddress            (bool b_Reuse=true);
    bool        ReusePort               (bool b_Reuse=true);
    bool        Unblock                 ();

    bool        GetPeerName             (SocketAddress& addr) const;
    bool        GetSockName             (SocketAddress& addr) const;

    intsys      Recv                    (void* p_Buffer, uintsys u_BufferSize, int n_Flags=0);
    intsys      RecvFrom                (void* p_Buffer, uintsys u_BufferSize, int n_Flags,
                                         SocketAddress& addr_Peer);
    intsys      Recv                    (String& str_Buffer, int n_Flags=0);
    intsys      RecvFrom                (String& str_Buffer, int n_Flags,
                                         SocketAddress& addr_Peer);

    intsys      Send                    (const void* p_Buffer, uintsys u_BufferSize,
                                         int n_Flags=0);
    intsys      SendTo                  (const void* p_Buffer, uintsys u_BufferSize,
                                         int n_Flags, const SocketAddress& addr_Dest);
    intsys      Send                    (const String& str_Data, int n_Flags=0);
    intsys      Send                    (const StringList& strl_Data, int n_Flags=0);
    intsys      SendTo                  (const String& str_Data, int n_Flags,
                                         const SocketAddress& addr_Dest);

    int         GetPendingError         () const;

    bool        EnableBroadcast         (bool b_Enable=true);
    bool        EnableKeepAlive         (bool b_Enable=true);
    bool        EnableLingerOption      (bool b_Enable=true, int n_LingerTime=0);
    bool        EnableTcpNoDelay        (bool b_Enable=true);

    bool        SetRecvBufferSize       (int n_Size);
    bool        SetSendBufferSize       (int n_Size);

    int         GetType                 () const;

    int         GetTcpMaxSegmentSize    () const;
    bool        SetTcpMaxSegmentSize    (int n_Size);

                operator bool           () const;

    static void CloseSocket             (SOCKET sock);

    static int  Select                  (int n_MaxHandle, fd_set* set_Read, fd_set* set_Write,
                                         fd_set* set_Error, struct timeval* tv_Timeout);

private:

    SOCKET  h_Socket_;

    BerkeleySocket (const BerkeleySocket&);            // prevent copying
    BerkeleySocket& operator= (const BerkeleySocket&); // prevent assignment
};

} // namespace mikestoolbox

